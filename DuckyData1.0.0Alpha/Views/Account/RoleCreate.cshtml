@{
    ViewBag.Title = "Create Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="spacerBody">
    
    <h2>Role Create</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div>
            Role name
        </div>
        <p>
            <input id="RoleName" name="RoleName" class="form-control input-sm" type="text" placeholder="Name for the role" max="15">
        </p>
        <input type="submit" class="btn btn-primary" value="Create role" />
    }
</div>

<p>&nbsp;</p>
@Html.ActionLink("Roles","RoleIndex") | @Html.ActionLink("Add Role to User","RoleAddToUser")