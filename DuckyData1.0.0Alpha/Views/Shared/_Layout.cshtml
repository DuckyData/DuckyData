        <div class="width-100">
            <div class="col-xs-4 col-xs-offset-3">
                <h3 class="footer-title">Meet our team</h3>
                <p>&copy; @DateTime.Now.Year - DuckyData</p>
            </div>
            <div class="col-xs-5">
                <div class="footer-banner">
                    <h3 class="footer-title"><span class="fui-mail"></span>&nbsp;Leave us a message</h3>
                    <ul>
                        <li>Contact us at duckydata@gmail.com</li>
                        <li>Have a suggestion for us?</li>
                        <li>Report a bug!</li>
                    </ul>
                    Go to: <a href="http://designmodo.com/flat" target="_blank">designmodo.com/flat</a>
                </div>
            </div>
        </div>
    </footer>-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<script>
    $(document).ready(function () {
        $('.dropdown-toggle').dropdown();
    });

</script>
