@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@User.Identity.GetUserName()<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Favourte Audios", "Index", "MusicFavourites")</li>
                    <li>@Html.ActionLink("Upload Audios", "Upload", "MusicFetch")</li>
                    <li>@Html.ActionLink("Favourte Videos", "Index", "VideoFavourites")</li>
                    <li>@Html.ActionLink("Upload Videos", "Upload", "VideoFetch")</li>
                    <li>@Html.ActionLink("Create Bug Report", "Create", "BugReports")</li>
                    <li>@Html.ActionLink("Messages", "Inbox", "Message")</li>
                    <li role="separator" class="divider"></li>
                    <li>@Html.ActionLink("Change Password", "ChangePassword", "Manage")</li>
                    <li>@Html.ActionLink("Edit Profile","Edit","Account", new { id = HttpContext.Current.User.Identity.GetUserId() }, new { })</li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
