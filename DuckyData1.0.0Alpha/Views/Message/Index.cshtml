@model IEnumerable<DuckyData1._0._0Alpha.ViewModels.MessageBase>

@{
    ViewBag.Title = "Messages";
}
<h2>Users</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.viewed)
            </th>

            <th></th>
        </tr>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recipient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>

            <td>
                @{ 
                    if (item.viewed == true)
                    {
                    <img src='~/img/icons/png/read.png' alt='Read' title='Read' style='width: 30px; height: 30px;' />
                    }
                    else
                    {
                <img src='~/img/icons/png/unread.png' alt="unread" title="unread" style="width: 30px; height: 30px;" />
                        }
                }
            </td>
            
            <td>
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
