@model IEnumerable<DuckyData1._0._0Alpha.ViewModels.MessageBase>

@{
    ViewBag.Title = "Sent";
}

<h2>Sent</h2>

<p>
    @Html.ActionLink("New Message", "Create") |
    @Html.ActionLink("Inbox", "Inbox")
</p>
<table class="table">
    <tr>
        <th>
            Viewed
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SentDate)
        </th>
        <th>
            Sent To
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @{
                    if (item.viewed == true)
                    {
                            <img src='~/img/icons/png/read.png' alt='Mark As Unread' title='Mark As Unread' style='width: 30px; height: 30px;' />
                    }
                    else
                    {
                        <img src='~/img/icons/png/unread.png' alt="unread" title="unread" style="width: 30px; height: 30px;" />
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recipient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>





            <td>
                @Html.ActionLink("Read ", "Details", new { id = item.Id }) 

            </td>
        </tr>
                    }

</table>